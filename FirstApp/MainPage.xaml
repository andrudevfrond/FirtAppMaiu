<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstApp.MainPage"
             xmlns:vm="clr-namespace:FirstApp.ViewModels"
             x:DataType="vm:TestViewModel">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label Text="{Binding Text}"/>
            <Label Text="{Binding Count}" FontSize="16"></Label>
            <Button Text="Cambiar Texto" Command="{Binding CambiarTextoCommand}"></Button>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
