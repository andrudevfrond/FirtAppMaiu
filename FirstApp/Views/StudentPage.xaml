<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstApp.Views.StudentPage"
             xmlns:mv="clr-namespace:FirstApp.ViewModels"
             Title="StudentPage">
    <VerticalStackLayout x:DataType="mv:StudentViewModels">
        <Entry
            Text="{Binding Name}"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Placeholder="ingrese el nombre"/>
        <Entry
            Text="{Binding LastName}"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Placeholder="Ingrese el apellido"/>

        <CollectionView ItemsSource="{Binding Errors}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding .}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" Background="LightCoral"></Label>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Guardar" Command="{Binding SaveStudentCommand}"/>
    </VerticalStackLayout>
</ContentPage>